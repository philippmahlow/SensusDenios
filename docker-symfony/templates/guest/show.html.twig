{% extends 'base.html.twig' %}

{% block title %}Guest{% endblock %}

{% block body %}
    <h1>Guest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guest.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ guest.name }}</td>
            </tr>
            <tr>
                <th>IsVegan</th>
                <td>{{ guest.isVegan ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVegetarian</th>
                <td>{{ guest.isVegetarian ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAvoidGluten</th>
                <td>{{ guest.isAvoidGluten ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAvoidPork</th>
                <td>{{ guest.isAvoidPork ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAvoidFish</th>
                <td>{{ guest.isAvoidFish ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Dishes</h2>
    {% for dishList in dishes %}
        <h3>{{ loop.index }}</h3>
        <ul>
            {% for dish in dishList %}
                <li>{{ dish.name }}</li>
            {% endfor %}
        </ul>
    {% endfor %}

    <a href="{{ path('guest_index') }}">back to list</a>

    <a href="{{ path('guest_edit', {'id': guest.id}) }}">edit</a>

    {{ include('guest/_delete_form.html.twig') }}
{% endblock %}
