{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block body %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsVegan</th>
                <th>IsVegetarian</th>
                <th>IsGluten</th>
                <th>IsFish</th>
                <th>IsPork</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>{{ ingredient.isVegan ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.isVegetarian ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.isGluten ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.isFish ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.isPork ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('ingredient_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ingredient_new') }}">Create new</a>
{% endblock %}
